<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/lin_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Buttons / Settings -->
        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_add_photo_main"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_img"
            android:contentDescription="@string/profile_image" />

        <!-- Step Counter / Play Stop -->
        <LinearLayout
            android:id="@+id/lin_playstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_playstop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/btn_play"
                android:contentDescription="@string/play_stop" />
        </LinearLayout>

        <!-- Progress / Donut -->
        <ProgressBar
            android:id="@+id/lin_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:max="100" />

        <!-- Goal / Set Goal -->
        <LinearLayout
            android:id="@+id/lin_setgoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_btn_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Step Chart -->
        <LinearLayout
            android:id="@+id/lin_step_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Calorie Chart -->
        <LinearLayout
            android:id="@+id/lin_calorie_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- BMI -->
        <LinearLayout
            android:id="@+id/lin_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- History -->
        <LinearLayout
            android:id="@+id/lin_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- GPS -->
        <LinearLayout
            android:id="@+id/lin_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Text Views -->
        <TextView
            android:id="@+id/txt_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_placeholder" />

        <TextView
            android:id="@+id/txt_main_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal" />

        <TextView
            android:id="@+id/txt_main_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight_placeholder" />

        <TextView
            android:id="@+id/txt_main_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_placeholder" />

        <TextView
            android:id="@+id/txt_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steps" />

        <TextView
            android:id="@+id/txt_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calories" />

        <TextView
            android:id="@+id/txt_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bmi" />

        <TextView
            android:id="@+id/txt_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history" />

        <TextView
            android:id="@+id/txt_goal_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_hint" />

        <TextView
            android:id="@+id/txt_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_counter" />

        <TextView
            android:id="@+id/txt_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gps" />

        <TextView
            android:id="@+id/txttarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target" />

        <!-- Placeholder IDs required by MainActivity -->
        <TextView
            android:id="@+id/txt_main_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/pace_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/distance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/speed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/calories_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/disdis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
