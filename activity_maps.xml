<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f2">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#00bfbb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Walking/Running Text -->
    <TextView
        android:id="@+id/txt_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/exercise_type_walking"
        android:textColor="#00bfbb"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_walk"
        app:layout_constraintWidth_percent="0.5"/>

    <TextView
        android:id="@+id/txt_walk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/units_metric"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/txt_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"/>

    <!-- Timer Text -->
    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/interval_1_minute"
        android:textColor="#00bfbb"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/txt_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/timer"
        app:layout_constraintWidth_percent="0.5"/>

    <com.demo.example.PausableChronometer
        android:id="@+id/timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt_walk"
        app:layout_constraintStart_toEndOf="@id/txt_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"/>

    <!-- Distance and Speed -->
    <TextView
        android:id="@+id/txt_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tell_distance_setting"
        android:textColor="#00bfbb"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/txt_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_distance_val"
        app:layout_constraintWidth_percent="0.5"/>

    <TextView
        android:id="@+id/txt_distance_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/timer"
        app:layout_constraintStart_toEndOf="@id/txt_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"/>

    <TextView
        android:id="@+id/txt_speed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tell_speed_setting"
        android:textColor="#00bfbb"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/txt_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_speed_val"
        app:layout_constraintWidth_percent="0.5"/>

    <TextView
        android:id="@+id/txt_speed_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt_distance_val"
        app:layout_constraintStart_toEndOf="@id/txt_speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"/>

    <!-- Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txt_speed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start"/>

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/button_round_track_start"
        android:textColor="#ffffff"
        android:text="@string/btn_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/button_round_track_pause"
        android:textColor="#ffffff"
        android:text="@string/btn_pause"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/button_round_track_stop"
        android:textColor="#ffffff"
        android:text="@string/btn_stop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/lin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_round_track_pause"
            android:textColor="#ffffff"
            android:text="@string/btn_pause" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_round_track_stop"
            android:textColor="#ffffff"
            android:text="@string/btn_stop"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
